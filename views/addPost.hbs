<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Post</title>
  </head>
  <body>
    <h1>Add Post</h1>
    <hr>
    <form action="/posts/add" enctype="multipart/form-data" method="post">
      <h2>Feature Image</h2>
      <hr />
      <input style="margin: auto;" name="featureImage" id="featureImage" type="file" />

      <h2>Post Content</h2>
      <hr />
      <label for="title">Title:</label>
      <br />
      <input type="text" name="title" id="title" style="width: 100%" />
      <br /> <br>
      <label for="body">Body:</label>
      <br />
      <textarea name="body" id="body" style="width: 100%; min-height: 10rem;"></textarea>
      <br /> <br> 

      <label for="category">Category:</label>
      <br />
        {{#if categories}}
          <select class="form-control" name="category" id="category">
            <option value="">Select Category</option>
            {{#each categories}}
              <option value="{{id}}">{{category}}</option>
            {{/each}}
          </select>
        {{else}}
          <div>No Categories</div>
        {{/if}}
      </select>
      <br />

      <p style="font-weight: bold;">Visibility:</p>
      <input type="checkbox" name="published" id="published" value="true" />
      <label for="published">Published</label>
      <hr />
      <button class="btn btn-success">Add Post</button>
    </form>
  </body>
</html>