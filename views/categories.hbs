<div class="row">
  <div class="col-md-12">
    <h2>Categories</h2>
    <hr />

    <table class="table table-bordered table-responsive">
      <thead class="thead-dark">
        <tr>
          <th>Category ID</th>
          <th>Category Name</th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr>
            <td><a href="/posts?category={{id}}">{{id}}</a></td>
            <td><a href="/posts?category={{id}}">{{category}}</a></td>
          </tr>
        {{else}}
          <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
          </div>
        {{/each}}
      </tbody>
    </table>

  </div>
</div>